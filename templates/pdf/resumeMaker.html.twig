{% extends 'base.html.twig' %}
{% block content %}

<div class="resume">
    <h4>Create a simple CV</h4>
<form method="post" action="{{ path('pdf') }}">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="name">Full Name :</label>
            <input type="text" class="form-control" id="name" name="name" >
        </div>
        <div class="form-group col-md-6">
            <label for="mail">Email :</label>
            <input type="text" class="form-control" id="mail" name="mail">
        </div>
    </div>
    <div class="form-group">
        <label for="poste">Occupation :</label>
        <input type="text" class="form-control" id="poste" name="poste" placeholder="ex: WEB DESIGNER" required>
    </div>
    <div class="form-group">
        <label for="tel">Phone Number:</label>
        <input type="text" class="form-control" id="tel" name="tel" placeholder="+21612345678" required>
    </div>
    <div class="form-group">
        <label for="profile">Profil :</label>
        <textarea class="form-control" id="profil" name="profil" placeholder="Short description about yourself" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="skills">Skills :</label>
        <div class="form-group">
            <input type="text" class="form-control" id="s1" name="s1" placeholder="Web Design" required>
            <textarea class="form-control" id="ds1" name="ds1" placeholder="skill description 1" rows="2"></textarea>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="s2" name="s2" placeholder="Project Direction" required>
            <textarea class="form-control" id="ds2" name="ds2" placeholder="skill description 2" rows="2"></textarea>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="s3" name="s3" placeholder="Interface Design" required>
            <textarea class="form-control" id="ds3" name="ds3" placeholder="skill description 3" rows="2"></textarea>
        </div>
    </div>

    <label for="poste">Techniques :</label>
    <div class="form-row">
        {% for i in 1..9 %}
            <div class="form-group col-sm-2">
                {% if i < 7 %}
            <input type="text" class="form-control" id="tc{{ i }}" name="tc{{ i }}" placeholder="ex: WEB DESIGNER {{ i }}" required>
                {% else %}
            <input type="text" class="form-control" id="tc{{ i }}" name="tc{{ i }}" placeholder="ex: WEB DESIGNER {{ i }}">
                {% endif %}
            </div>
        {% endfor%}
    </div>
    <label>Experiences :</label>

    <div class="form-group">
        {% for p in 1..2 %}
        <div class="form-group">
        <input type="text" class="form-control" id="soc{{ p }}" name="soc{{ p }}" placeholder="Société{{ p }}" required>
        <input type="text" class="form-control" id="postexp{{ p }}" name="postexp{{ p }}" placeholder="Poste occupée" required>
        <textarea class="form-control" id="exp{{ p }}" name="exp{{ p }}" placeholder="Short description of the Experience {{ p }}" rows="2"></textarea>


        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Start Date {{ p }}</label>
                <input class="form-control" name="dd{{ p }}" id="dd{{ p }}" type="number" min="1900" max="2099" step="1" value="2021" />
            </div>
            <div class="form-group col-md-6">
                <label>End Date {{ p }}</label>
                <input class="form-control" name="df{{ p }}" id="df{{ p }}" type="number" min="1900" max="2099" step="1" value="2021" />
            </div>
        </div>
        </div>
        {% endfor %}
    </div>

    <label >Education :</label>
        {% for i in 1..2 %}
        <div class="form-group">
            <input type="text" class="form-control" id="ed{{ i }}" name="ed{{ i }}" placeholder="ex: University XYZ" required>
            <input type="text" class="form-control" id="cert{{ i }}" name="cert{{ i }}" placeholder="Certeficat: ex : licence en Informatiques" required>
        </div>
        {% endfor %}
<div class="form-group" align="center">
<input type="submit" value="Submit" id="myButton" class="btn btn-outline-primary">
<input type="reset" value="Cancel" class="btn btn-outline-danger">
</div>
</form>
</div>
</div>
{% endblock %}